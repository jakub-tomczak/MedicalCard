@using Hl7.Fhir.Model;
@model Hl7.Fhir.Model.Patient;
@{
    ViewData["Title"] = "EditPatient";

}
<h1>Edycja pacjenta</h1>
@if (!(ViewData["Patient"] is null))
{
    @if (ViewData["Patient"] is Patient patient)
    {
        <p>@(patient.Name.First().Family)</p>
        @using (Html.BeginForm(method: FormMethod.Post))
        {
            <div class="form-horizontal">
                <div class="form-group">
                    Label
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name.First().Family, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name.First().Family, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    }
}
else
{
    <p>Nie znaleziono pacjenta!</p>
}

@Html.ActionLink("Powrót do pacjentów", "Patient");

